<div class="container mt-5">
  <h3 class="text-center mb-5">会員情報編集</h3>
  <%= form_with(model: current_customer, url: update_information_path, local: true) do |f| %>
    <%= render "public/shared/error_messages", resource: @customer %>

    <div class="form-group">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "名前" %>

    <div class="d-flex justify-content-between align-items-center">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
  
  <div style="overflow: hidden;">
    <%= button_to "退会する", quit_customers_path, method: :get, class: "btn btn-danger float-right" %>
  </div>

</div>