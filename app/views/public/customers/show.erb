<!-- ユーザーの詳細 -->
<div>
  <h3><%= @customer.name %></h3>
  <%= image_tag @customer.get_profile_image(100,100) %>
  <% if @customer.id == current_customer.id %>
  <p><%= link_to "プロフィール編集", edit_customer_path(@customer) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->
<% @post.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image %>
    <% end %>
    <p>投稿ユーザー画像：<%= image_tag post.customer.get_profile_image(100,100) %></p>
    <p>説明：<%= post.introduction %></p>
    <p>ユーザーネーム：<%= post.customer.name %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>  </div>
<% end %>