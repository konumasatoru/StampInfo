<%= form_with model: @post, url:post_path, local: true do |f| %>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>商品編集</h1>

        <%= render "public/shared/error_messages", resource: @post %>

        <div class="form-group">
          <%= f.label :"商品名", class: "col-sm-3 control-label" %>
          <%= f.text_field :name, class: "col-sm-9 form-control-static name" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品画像", class: "col-sm-3 control-label" %>
          <%= f.file_field :image, class: "col-sm-9 form-control-static image" %>
        </div>
        <div class="form-group">
          <%= f.label :"商品説明", class: "col-sm-3 control-label" %>
          <%= f.text_area :introduction, class: "col-sm-9 control-label explanation" %>
        </div>
        <div class="form-group">
          <%= f.label :"ジャンル", class: "col-sm-5 control-label" %>
          <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %>
        </div>
        <div class="form-group">
    <%= f.label :販売元リンク, class: "col-sm-5 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :seller_url, class: "form-control" %>
    </div>
  </div>
        <div class="form-group">
          <%= f.label :"価格", class: "col-sm-5 control-label" %>
          <%= f.text_field :price, class: "col-sm-3 form-control-static price" %>円
        </div>
        <%= f.submit '更新', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>