<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :name %>
  
  <h4>画像投稿</h4>
  <%= f.file_field :image %>
	
  <h4>本文</h4>
  <%= f.text_area :introduction %>
  
  <h4>ジャンル</h4>
  <%= f.label :genre_id, "ジャンル" %>
	<div class="select_field"><%= f.collection_select :genre_id, Genre.all, :id, :name %></div>
	
	<h4>価格</h4>
	<%= f.text_field :price %>円
	
  <%= f.submit '投稿' %>
<% end %>